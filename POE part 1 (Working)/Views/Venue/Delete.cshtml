@model Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="card shadow-lg border-0 rounded-4 p-4 bg-white">
    <h2 class="text-danger fw-semibold mb-3">@ViewData["Title"]</h2>
    <p class="fs-5 mb-4 text-muted">Are you sure you want to permanently delete this venue?</p>

    <dl class="row mb-4">
        <dt class="col-sm-3 text-dark fw-medium">Venue Name</dt>
        <dd class="col-sm-9">@Model.VenueName</dd>

        <dt class="col-sm-3 text-dark fw-medium">Location</dt>
        <dd class="col-sm-9">@Model.Location</dd>

        <dt class="col-sm-3 text-dark fw-medium">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>

        <dt class="col-sm-3 text-dark fw-medium">Image</dt>
        <dd class="col-sm-9">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/placeholder.png" : Model.ImageUrl)"
                 alt="Venue Image"
                 class="img-thumbnail"
                 style="max-width: 300px;" />
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="d-flex gap-3">
        <input type="hidden" asp-for="VenueId" />
        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
    </form>
</div>
