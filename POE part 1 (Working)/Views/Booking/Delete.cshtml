@model Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="card shadow-lg border-0 rounded-4 p-4 bg-white">
    <h2 class="text-danger fw-semibold mb-3">Delete Booking</h2>
    <p class="fs-5 text-muted mb-4">Are you sure you want to permanently delete this booking?</p>

    <dl class="row mb-4">
        <dt class="col-sm-3 text-dark fw-medium">Event</dt>
        <dd class="col-sm-9">@Model.Event?.EventName</dd>

        <dt class="col-sm-3 text-dark fw-medium">Venue</dt>
        <dd class="col-sm-9">@Model.Venue?.VenueName</dd>

        <dt class="col-sm-3 text-dark fw-medium">Booking Date</dt>
        <dd class="col-sm-9">@Model.BookingDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete" class="d-flex gap-3">
        <input type="hidden" asp-for="BookingId" />
        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
    </form>
</div>
