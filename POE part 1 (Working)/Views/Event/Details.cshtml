@model EventEaseBookingSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-lg border-0 rounded-4 p-4 bg-white mt-4">
    <h2 class="text-primary fw-semibold mb-4">Event Details</h2>

    <div class="mb-3">
        <h4 class="fw-bold text-dark">@Model.EventName</h4>
        <p class="mb-1">
            <strong class="text-primary">Date:</strong>
            @if (Model.EventDate != null)
            {
                @Model.EventDate.ToShortDateString()
            }
            else
            {
                <span class="text-muted">N/A</span>
            }
        </p>
        <p class="mb-1">
            <strong class="text-primary">Venue:</strong>
            @if (!string.IsNullOrEmpty(Model.Venue?.VenueName))
            {
                @Model.Venue.VenueName
            }
            else
            {
                <span class="text-muted">Venue not specified</span>
            }
        </p>
    </div>

    <div class="d-flex gap-3 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-outline-primary px-4">Edit</a>
        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
    </div>
</div>
